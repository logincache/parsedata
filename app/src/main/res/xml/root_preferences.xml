
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/messages_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true"
            android:icon="@drawable/ic_baseline_search_24"/>

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/sites"
            android:entryValues="@array/sites"
            android:icon="@drawable/ic_baseline_alternate_email_24"
            android:key="list_sites"
            android:title="Выберите сайт" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/city"
            android:entryValues="@array/city"
            android:icon="@drawable/ic_baseline_location_city_24"
            android:key="list_city"
            android:scaleType="centerCrop"
            android:title="Выберите город" />

    </PreferenceCategory>

</PreferenceScreen>
